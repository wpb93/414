@{
	Layout = "_MultiPlayerLayout.cshtml";
}

	<h1>Lobby</h1>
	<div style="float: left">
		<div id="lobby">
			<div id="statetxt">
				undef
			</div>
			<button id="joinrandomgamebtn">Join Random Game</button>
			<button id="newgamebtn">New Game</button>
			<input type="text" id="newgamename" />
			<p id="roomnum">Rooms: <span id="roomcnt">0</span></p>
			<table id="gamelist"></table>
		</div>

		<div id="chat">
			<div id="readyStatus">
			<div id="opStatus">
				<img id="opReady" width="75" height="75" src="/Images/circle_yellow.png" /><span>Your opponent is not ready</span>
			</div>
			<button id="ready"><img id="meReady" width="75" height="75" src="/Images/circle_yellow.png" /><br />Not ready</button>
			</div>

			<table>
                <tr>
                    <td>
                        <div id="gameDiv" class="game">
			                <div id="score"></div>
			                <div id="gameCanvas">
				                <canvas class="game"></canvas>
				                <canvas class="game"></canvas>
			                </div>
			                <div id="outer" class="meter">
				                <span id="bar"></span>
				                <p id="percent"></p>
			                </div>
		                </div>
                        <div id="theDialogue"></div>
			            <form class="photon" id="mainfrm">
				            <input type="text" id="input" />
				            <input type="submit" value="Send" />
			            </form>
			            <button id="colorbtn">Change Color</button>
			            <button id="leavebtn">Leave</button>
                    </td>
                    <td><div id="buttonContainer">
				        <table id="items">
					        <tr>
				        		<td><img id="item1" class="item_gray" src="/Images/hole.jpg" onclick="clickItem(1)"></td>
				        		<td><p>hole</p><p>Energy Need: 80</p></td>
			        		</tr>
				        	<tr>
				        		<td><img id="item2" class="item_gray" src="/Images/curve.jpg" onclick="clickItem(2)"></td>
			        			<td><p>curve</p><p>Energy Need: 150</p></td>
			        		</tr>
			        		
			        		<tr>
			   	        		<td><img id="item3" class="item_gray" src="/Images/shake.jpg" onclick="clickItem(3)"></td>
			           			<td><p>shake</p><p>Energy Need: 150</p></td>
			        		</tr>
				        	<tr>
					        	<td><img id="item4" class="item_gray" src="/Images/big.jpg" onclick="clickItem(4)"></td>
					        	<td><p>Larger</p><p>Energy Need: 300</p></td>
					        </tr>
					        <tr>
						        <td><img id="item5" class="item_gray" src="/Images/split.jpg" onclick="clickItem(5)"></td>
						        <td><p>Split</p><p>Energy Need: 350</p></td>
					        </tr>
					        <tr>	
						        <td><img id="item6" class="item_gray" src="/Images/accelerate.jpg" onclick="clickItem(6)"></td>
						        <td><p>Accelerate</p><p>Energy Need: 350</p></td>
					        </tr>
				        </table>
			        </div>
                        <br />
                        <br />
                    <div id="liveGame" class="game">
				        <canvas class="game"></canvas>
				        <canvas class="game"></canvas>
			        </div>
                    </td>
                </tr>
			</table>
		</div>
	</div>
